<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/splash2">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_logo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="50dp"
                android:src="@mipmap/logo" />

            <FrameLayout
                android:id="@+id/framee"
                android:layout_width="match_parent"
                android:layout_height="275dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/iv_logo"
                android:layout_marginBottom="20dp"
                android:layout_marginEnd="19dp"
                android:layout_marginLeft="19dp"
                android:layout_marginRight="19dp"
                android:layout_marginStart="19dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="220dp"
                    android:layout_marginTop="40dp"

                    android:background="@drawable/et_item">

                    <TextView
                        android:id="@+id/tv_get_baclk"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="20dp"
                        android:text="إستعادة كلمة المرور"
                        android:textColor="#000"
                        android:textSize="16sp" />

                    <EditText
                        android:id="@+id/et_email_or_password"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="20dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginStart="20dp"
                        android:background="@null"
                        android:gravity="right"
                        android:hint="البريد الالكتروني او رقم الجوال"
                        android:inputType="textEmailAddress"
                        android:textColor="#000"
                        android:textColorHint="#A4A4A4"
                        android:textSize="14sp" />

                    <View
                        android:id="@+id/view"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_below="@+id/et_email_or_password"
                        android:layout_marginEnd="20dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="5dp"
                        android:background="#F3F3F3" />


                    <Button
                        android:id="@+id/btn_login"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:layout_below="@+id/view"
                        android:layout_marginEnd="25dp"
                        android:layout_marginLeft="25dp"
                        android:layout_marginRight="25dp"
                        android:layout_marginStart="25dp"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/btn_sign_in"
                        android:gravity="center"
                        android:text="إرسال"
                        android:textColor="#FFF"
                        android:textSize="14sp" />
                </RelativeLayout>

            </FrameLayout>
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>