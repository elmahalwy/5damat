<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="400dp"
    android:layout_gravity="center"
    android:layout_marginStart="15dp"
    android:layout_marginLeft="15dp"
    android:layout_marginEnd="15dp"
    android:layout_marginRight="15dp"
    android:background="@drawable/drawable_linear_main">

    <ImageView
        android:id="@+id/iv_vector_add"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:scaleType="fitXY"
        android:src="@drawable/cancel" />

    <TextView
        android:id="@+id/tv_add_photo_video"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_vector_add"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="اذكر سبب الالغاء"
        android:textColor="#1C1C1C"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/et_reason_of_cancle_process"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:layout_below="@+id/tv_add_photo_video"
        android:layout_marginStart="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="15dp"
        android:layout_marginRight="15dp"
        android:hint=" سبب الالغاء..."
        android:gravity="top|right"
        android:padding="5dp"
        android:textColor="#1C1C1C"
        android:textColorHint="#979797"
        android:background="@drawable/edit_text_transparent" />
    <Button
        android:id="@+id/btn_choose"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@+id/et_reason_of_cancle_process"
        android:layout_marginStart="60dp"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="60dp"
        android:layout_marginRight="60dp"
        android:background="@drawable/btn_sign_in"
        android:gravity="center"
        android:text="ارسال"
        android:textColor="#FFF"
        android:textSize="16sp" />

</RelativeLayout>