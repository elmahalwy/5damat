<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_message_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:text="awsddsasdsadaddsdasdssaasdsdsdaddadsadsdadsadsadsdsdsadsdas"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_message_title"
        android:weightSum="3">


        <TextView
            android:id="@+id/tv_number_of_comments"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableEnd="@mipmap/comments"
            android:drawableRight="@mipmap/comments"
            android:drawablePadding="5dp"
            android:gravity="center"
            android:text="dasfsfsf"
            android:textColor="#464646" />


        <TextView
            android:id="@+id/tv_date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableEnd="@mipmap/watching"
            android:drawableRight="@mipmap/watching"
            android:drawablePadding="5dp"
            android:gravity="center"
            android:text="dasfsfsf"
            android:textColor="#464646" />

        <TextView
            android:id="@+id/tv_user_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableEnd="@mipmap/user"
            android:drawableRight="@mipmap/user"
            android:drawablePadding="5dp"
            android:gravity="center"
            android:text="dasfsfsf"
            android:textColor="#464646" />

    </LinearLayout>
</RelativeLayout>