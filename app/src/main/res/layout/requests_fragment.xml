<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:weightSum="2">

        <RelativeLayout
            android:id="@+id/relative_purchase"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tv_purchase"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:text="المشتريات"
                android:textColor="#000"

                />

            <View
                android:id="@+id/view_purchaes"
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:layout_below="@+id/tv_purchase"
                android:layout_marginTop="8dp"
                android:background="#E0E0E0"


                />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relative_requests"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tv_requests"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:text="الطلبات"
                android:textColor="#3558B9"

                />

            <View
                android:id="@+id/view_requests"
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:layout_below="@+id/tv_requests"
                android:layout_marginTop="8dp"
                android:background="#3558B9"

                />
        </RelativeLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:weightSum="4">

        <TextView
            android:id="@+id/tv_in_done"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="جاري تنفيذها" />

        <TextView
            android:id="@+id/tv_done"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="تمت" />

        <TextView
            android:id="@+id/tv_cancle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="ملغية" />

        <TextView
            android:id="@+id/tv_in_waiting"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="#000"
            android:text="في الانتظار" />

    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_requests"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>