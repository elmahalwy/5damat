<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="360dp"
    android:layout_gravity="center"
    android:layout_marginStart="15dp"
    android:layout_marginLeft="15dp"
    android:layout_marginEnd="15dp"
    android:layout_marginRight="15dp"
    android:background="@drawable/drawable_linear_main">

    <ImageView
        android:id="@+id/iv_vector_add"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:scaleType="fitXY"
        android:src="@drawable/vector_add_photo" />

    <TextView
        android:id="@+id/tv_report"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_vector_add"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="تبليغ ومنع"
        android:textColor="#1C1C1C"
        android:textSize="16sp" />

    <View
        android:id="@+id/v1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/tv_report"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        android:background="#E9E9E9" />

    <TextView
        android:id="@+id/tv_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/v1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text=" هل انت متاكد من انك ترثيد التبليغ عن هذه الرسالة على انها مزعجة؟ سيتم حذف هذه الرسالة ومنع هذا المساخدم من التواصل معك "
        android:textColor="#1C1C1C"
        android:textSize="16sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_text"
        android:layout_marginTop="25dp"
        android:weightSum="3">

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="0.3"

            />

        <Button
            android:id="@+id/btn_no"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_weight="1.1"
            android:background="@drawable/btn_sign_in"
            android:gravity="center"
            android:text="الغاء الامر"
            android:textColor="#FFF"
            android:textSize="16sp" />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="0.2"

            />

        <Button
            android:id="@+id/btn_yes"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_weight="1.1"
            android:background="@drawable/btn_sign_in"
            android:gravity="center"
            android:text="موافق"
            android:textColor="#FFF"
            android:textSize="16sp" />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="0.3"

            />
    </LinearLayout>
</RelativeLayout>